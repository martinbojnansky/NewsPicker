<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="NewsPicker.Mobile.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Resources  -->
    <Application.Resources>
        <ResourceDictionary>

            <!--  Colors  -->
            <Color x:Key="PrimaryColor">#07B0C5</Color>
            <Color x:Key="SecondaryColor">#F8AC1B</Color>
            <Color x:Key="BackgroundColor">#FFFFFF</Color>
            <Color x:Key="BackgroundColorDarken">#F2F2F2</Color>
            <Color x:Key="TextColor">#222222</Color>

            <!--  Base Values  -->
            <Thickness x:Key="PagePadding">12</Thickness>

            <!--  Base Styles  -->
            <Style TargetType="ActivityIndicator">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>

    <!--  Properties  -->
    <Application.Properties />
</Application>